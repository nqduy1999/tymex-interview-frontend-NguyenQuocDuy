{
  "compilerOptions": {
    "jsx": "react",
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "@tymex-interview/tsconfig",
    "@client/**/*",
    "@client/**/*.ts",
    "@client/**/**.ts",
    "@client/**/*.tsx",
    "vite.config.ts"
  ],
  "exclude": ["node_modules", "dist", "test", "**/*.test.ts", "**/*.spec.ts"]
}
